# Limitless iOS Widgets Backend Environment Variables

# Server Configuration
PORT=3001
NODE_ENV=development

# Limitless API Configuration
LIMITLESS_API_URL=https://api.limitless.exchange
LIMITLESS_API_KEY=your_api_key_here

# Cache Configuration (in seconds)
CACHE_TTL_MARKETS=300
CACHE_TTL_PORTFOLIO=180
CACHE_TTL_POSITIONS=120

# Widget Configuration
MAX_MARKETS_PER_WIDGET=5
MAX_POSITIONS_PER_WIDGET=3
WIDGET_UPDATE_INTERVAL=300

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,capacitor://localhost,ionic://localhost